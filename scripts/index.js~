const textWrapper = document.querySelector(".m12");
textWrapper.innerHTML = textWrapper.textContent.replace(/\S/g, "<span class='letter'>$&</span>");

anime.timeline({loop: true})
    .add({
	targets: '.m12 .letter',
	scale: [4, 1],
	opacity: [0, 1],
	translateZ: 0,
	easing: "easeOutExpo",
	duration: 950,
	delay: (el, i) => 70*i
    }).add({
	targets: '.m12',
	opcaity: 0,
	duration: 1000,
	easing: "easeOutexpo",
	delay: 1000
    });
